{% extends "base.twig" %}

{% block title %}Ajouter une voiture{% endblock %}

{% block content %}
    <div class="container">
        <h2 class="text-center my-4">Ajouter une Voiture</h2>

        <form action="ajouter_voiture.php" method="POST" enctype="multipart/form-data">
            <label>Marque :</label>
            <input type="text" name="marque" class="form-control" required>

            <label>Modèle :</label>
            <input type="text" name="modele" class="form-control" required>

            <label>Année :</label>
            <input type="number" name="annee" class="form-control" required>

            <label>Prix (€) :</label>
            <input type="number" step="0.01" name="prix" class="form-control" required>

            <label>Image :</label>
            <input type="file" name="image" class="form-control">

            <label><input type="checkbox" name="disponible" checked> Disponible</label>

            <button type="submit" class="btn btn-success mt-3">Ajouter</button>
        </form>
    </div>
{% endblock %}
